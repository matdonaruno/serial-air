{
  "expo": {
    "name": "Serial Air",
    "slug": "serial-air",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "serial-air",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A1A2E"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.serialair.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocalNetworkUsageDescription": "Serial Air uses your local network to discover and connect to microcontrollers for serial monitoring.",
        "NSBonjourServices": [
          "_serial-air._tcp"
        ]
      }
    },
    "plugins": [
      "expo-router",
      "expo-splash-screen",
      [
        "expo-updates",
        {
          "username": "serial-air"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "updates": {
      "enabled": true,
      "fallbackToCacheTimeout": 0
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
